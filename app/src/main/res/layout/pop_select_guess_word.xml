<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/white_shape">

        <TextView
            android:id="@+id/txt_select_word_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="请选择词语"
            android:textColor="#888888"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txt_guess_word_one"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txt_select_word_describe"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/titel_shape_green"
            android:gravity="center"
            android:text="刘变菲"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txt_guess_word_two"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txt_guess_word_one"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/titel_shape_green"
            android:gravity="center"
            android:text="刘变菲"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txt_guess_word_three"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txt_guess_word_two"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/titel_shape_green"
            android:gravity="center"
            android:text="刘变菲"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txt_guess_word_four"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txt_guess_word_three"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/titel_shape_green"
            android:gravity="center"
            android:text="刘变菲"
            android:textSize="16sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

</RelativeLayout>