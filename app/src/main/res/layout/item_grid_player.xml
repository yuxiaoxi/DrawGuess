<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_player_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt_player_youke_nickname"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="免子"
        android:textColor="@color/btn_gray_bg"
        android:textSize="16sp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txt_player_is_ready"
        android:layout_above="@+id/txt_player_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/waite_shape"
        android:layout_centerHorizontal="true"
        android:text="准备"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/white"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/txt_player_nickname"
        android:layout_below="@+id/img_player_avatar"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="免子"
        android:textColor="@color/white"
        android:textSize="14sp"/>
</RelativeLayout>